                android:text="导出结果" />
            <Button
                android:id="@+id/buttonfilter"
                android:layout_width="100px"
                android:layout_height="100px"
                android:text="查询筛选" />
            <Button
                android:id="@+id/buttonscan"
                android:layout_width="100px"
                android:layout_height="100px"
                android:text="扫描" />

